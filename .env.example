# Gemini AI API Key
# Get yours at: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_key_here

# Notion Integration Token
# Get yours at: https://www.notion.so/my-integrations
NOTION_API_KEY=your_notion_key_here

# Notion Database ID
# Find in your database URL: notion.so/workspace/{database_id}?v=...
NOTION_DATABASE_ID=your_database_id_here

# Authentication
# Username for login
APP_USERNAME=admin

# Password hash - Generate with: npm run hash-password
APP_PASSWORD_HASH=your_bcrypt_hash_here

# Session secret - Generate with: npm run generate-secret
SESSION_SECRET=your_64_char_random_string_here

# Session duration in seconds (345600 = 4 days)
SESSION_MAX_AGE=345600
